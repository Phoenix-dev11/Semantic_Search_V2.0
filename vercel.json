{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.12"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/search",
      "dest": "/api/search.py"
    },
    {
      "src": "/api/upload",
      "dest": "/api/upload.py"
    },
    {
      "src": "/api/feedback",
      "dest": "/api/feedback.py"
    }
  ],
  "env": {
    "PYTHONPATH": "."
  }
}
